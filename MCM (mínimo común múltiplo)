#include <iostream>
using namespace std;

int mcd(int a, int b) {
    a = (a < 0) ? -a : a;
    b = (b < 0) ? -b : b;
    while (b != 0) {
        int r = a % b;
        a = b;
        b = r;
    }
    return a;
}

int main() {
    int a, b;
    cout << "Ingresa a y b: ";
    cin >> a >> b;
    if (a == 0 || b == 0) { cout << "MCM indefinido (0)\n"; return 0; }
    long long l = (long long) (a / mcd(a,b)) * b;
    if (l < 0) l = -l;
    cout << "MCM: " << l << endl;
    return 0;
}

