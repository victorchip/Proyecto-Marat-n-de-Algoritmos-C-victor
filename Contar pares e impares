#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "¿Cuántos números?: ";
    cin >> n;
    int pares = 0, impares = 0, x;
    for (int i = 0; i < n; ++i) {
        cin >> x;
        if (x % 2 == 0) ++pares;
        else ++impares;
    }
    cout << "Pares: " << pares << " Impares: " << impares << endl;
    return 0;
}

