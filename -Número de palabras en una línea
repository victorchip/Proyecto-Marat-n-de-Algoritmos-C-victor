
#include <iostream>
#include <string>
#include <sstream>
using namespace std;

int main() {
    string linea;
    cout << "Ingresa una lÃ­nea: ";
    getline(cin, linea);
    istringstream iss(linea);
    string word;
    int cnt = 0;
    while (iss >> word) ++cnt;
    cout << "Palabras: " << cnt << endl;
    return 0;
}
