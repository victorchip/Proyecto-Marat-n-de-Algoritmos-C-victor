#include <iostream>
#include <string>
using namespace std;

int main() {
    string s;
    cout << "Ingresa una palabra: ";
    cin >> s;
    int cnt = 0;
    for (char c : s) {
        char ch = tolower(c);
        if (ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u') ++cnt;
    }
    cout << "Vocales: " << cnt << endl;
    return 0;
}

